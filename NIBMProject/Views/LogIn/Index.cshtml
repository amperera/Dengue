@model NIBMProject.Models.Login

@{
    ViewBag.Title = "Enter Your Username and Password to login";
    Layout = "~/Views/Shared/_BootstrapLayout.basic.cshtml";
    @System.Web.Optimization.Styles.Render("~/Content/style.css")
}

<h2 class ="titlehead">Please Enter The Username And Password</h2>
<div class ="login">
    <div class="well well-small">
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Login</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.UserName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserName)
            @Html.ValidationMessageFor(model => model.UserName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>

        <p>
            <input type="submit" value="Login" class="btn btn-primary" />
        </p>
    </fieldset>
   
}
    </div> 
    <div>

    @Html.ActionLink(" Register  ","index","Register");
</div>
<div>
    @Html.ActionLink("Forgot Password ? ","index","ChangePassword");
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
  </div>